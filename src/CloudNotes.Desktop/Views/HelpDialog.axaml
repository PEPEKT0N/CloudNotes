<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:html="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
        x:Class="CloudNotes.Desktop.Views.HelpDialog"
        Title="Help"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Grid Margin="0" RowDefinitions="Auto, *">
        <!-- Header with language switcher -->
        <Border Grid.Row="0"
                Background="#F5F5F5"
                Padding="15,10"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*, Auto">
                <TextBlock Grid.Column="0"
                           Text="CloudNotes Help"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center" />
                
                <!-- Language switcher -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Spacing="5"
                            VerticalAlignment="Center">
                    <TextBlock Text="Language:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"
                               Foreground="#666666" />
                    <Button x:Name="EnglishButton"
                            Content="EN"
                            Width="40"
                            Height="28"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Click="OnEnglishClick" />
                    <Button x:Name="RussianButton"
                            Content="RU"
                            Width="40"
                            Height="28"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Click="OnRussianClick" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Help content -->
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <html:HtmlPanel x:Name="HelpHtmlPanel"
                            Background="White"
                            Margin="10" />
        </ScrollViewer>
    </Grid>
</Window>

