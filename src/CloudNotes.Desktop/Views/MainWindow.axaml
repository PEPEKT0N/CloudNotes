<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:CloudNotes.Desktop.Model"               
        x:Class="CloudNotes.Desktop.Views.MainWindow"        
        mc:Ignorable="d"
        Title="CloudNotes"
        d:DesignWidth="800"
        d:DesignHeight="450">

    <Grid Background="lightblue" ColumnDefinitions="200, *">
        <Border Padding="20" Grid.Column="0">
            <StackPanel>
                <TextBox>CloudNotes</TextBox>

                <Button Margin="0,5"
                        Content="Create note"
                        Command="{Binding ViewModel.CreateNoteCommand}" />

                <TextBlock Text="Favorites"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,20,0,10" />

                <ListBox>
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Remove from favorites"
                                        Command="{Binding ViewModel.RemoveFromFavoritesCommand}" />
                            <MenuItem Header="Rename"
                                        Command="{Binding ViewModel.RenameNoteCommand}" />
                            <MenuItem Header="Delete"
                                        Command="{Binding ViewModel.DeleteNoteCommand}" />
                        </ContextMenu> 
                    </ListBox.ContextMenu>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>


                <TextBlock Text="Your Notes"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,30,0,10" />

                <ListBox ItemsSource="{Binding ViewModel.Notes}"
                         SelectedItem="{Binding ViewModel.SelectedListItem, Mode=TwoWay}"
                         SelectionChanged="OnListBoxSelectionChanged">

                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add to favorites"
                                        Command="{Binding ViewModel.AddToFavoritesCommand}" />
                            <MenuItem Header="Rename"
                                        Command="{Binding ViewModel.RenameNoteCommand}" />
                            <MenuItem Header="Delete"
                                        Command="{Binding ViewModel.DeleteNoteCommand}" />
                        </ContextMenu>
                    </ListBox.ContextMenu>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <Border Padding="5" Grid.Column="1">
            <TextBox AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Text="{Binding ViewModel.SelectedNote.Content,
                                    Mode=TwoWay,
                                    FallbackValue='Select a note'}" />
        </Border>
    </Grid>
</Window>