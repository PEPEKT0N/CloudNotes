<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:CloudNotes.Desktop.Model"               
        xmlns:views="clr-namespace:CloudNotes.Desktop.Views"
        x:Class="CloudNotes.Desktop.Views.MainWindow"        
        mc:Ignorable="d"
        Title="CloudNotes"
        d:DesignWidth="800"
        d:DesignHeight="450">

    <Grid Background="lightblue" ColumnDefinitions="200, *">
        <views:NoteListView x:Name="NoteListViewControl" Grid.Column="0" />

        <Border Padding="5" Grid.Column="1">
            <TextBox AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Text="{Binding SelectedNote.Content,
                                    Mode=TwoWay,
                                    FallbackValue='Select a note'}" />
        </Border>
    </Grid>
</Window>