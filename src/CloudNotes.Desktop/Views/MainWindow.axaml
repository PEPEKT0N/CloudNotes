<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:CloudNotes.Desktop.Model"               
        xmlns:views="clr-namespace:CloudNotes.Desktop.Views"
        xmlns:vm="clr-namespace:CloudNotes.Desktop.ViewModel"
        xmlns:local="clr-namespace:CloudNotes.Desktop.Converters"
        xmlns:html="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
        x:Class="CloudNotes.Desktop.Views.MainWindow"        
        mc:Ignorable="d"
        Title="CloudNotes"
        Width="1100"
        Height="700">

    <Grid Background="lightblue" ColumnDefinitions="200, *">
        <views:NoteListView x:Name="NoteListViewControl" Grid.Column="0" />

        <Border Padding="5" Grid.Column="1">
            <Grid RowDefinitions="Auto, Auto, Auto, *, Auto">
                <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ð·Ð°Ð¼ÐµÑ‚ÐºÐ¸ -->
                <TextBlock Grid.Row="0"
                           Text="{Binding ActiveListItem.Title, FallbackValue='Select a note'}"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="5,5,5,5" />

                <!-- ÐŸÐ°Ð½ÐµÐ»ÑŒ Ð¸Ð½ÑÑ‚Ñ€ÑƒÐ¼ÐµÐ½Ñ‚Ð¾Ð² Ñ„Ð¾Ñ€Ð¼Ð°Ñ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ -->
                <Border Grid.Row="1" 
                        Margin="5,0,5,5"
                        Padding="5"
                        Background="#E8E8E8"
                        CornerRadius="5"
                        IsVisible="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Button x:Name="BoldButton"
                                Content="B"
                                FontWeight="Bold"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Width="32" Height="32"
                                ToolTip.Tip="Bold (Ctrl+B)"
                                Click="OnBoldButtonClick" />
                        <Button x:Name="ItalicButton"
                                Content="I"
                                FontStyle="Italic"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Width="32" Height="32"
                                ToolTip.Tip="Italic (Ctrl+I)"
                                Click="OnItalicButtonClick" />
                        <Rectangle Width="1" Fill="#AAAAAA" Margin="5,2" />
                        <Button x:Name="SpoilerButton"
                                Content="ðŸ™ˆ"
                                Background="#FFFFFF"
                                Width="32" Height="32"
                                ToolTip.Tip="Spoiler (Ctrl+H) - Hide selected text"
                                Click="OnSpoilerButtonClick" />
                        <Button x:Name="FlashcardButton"
                                Content="ðŸŽ´"
                                Background="#FFFFFF"
                                Width="32" Height="32"
                                ToolTip.Tip="Insert flashcard template (??question::answer??)"
                                Click="OnFlashcardButtonClick" />
                        <Rectangle Width="1" Fill="#AAAAAA" Margin="5,2" />
                        <Button x:Name="PreviewButton"
                                Content="{Binding IsPreviewMode, Converter={x:Static local:PreviewButtonConverter.Instance}}"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Width="60" Height="32"
                                ToolTip.Tip="Toggle Preview (Ctrl+E)"
                                Command="{Binding TogglePreviewModeCommand}" />
                        <Rectangle Width="1" Fill="#AAAAAA" Margin="5,2" />
                        <Button x:Name="StudyButton"
                                Content="ðŸ“š Study"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Padding="8,0"
                                Height="32"
                                ToolTip.Tip="Study flashcards from current note"
                                Click="OnStudyButtonClick" />
                        <Button x:Name="StudyAllButton"
                                Content="ðŸ“š Study by Tags"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Padding="8,0"
                                Height="32"
                                ToolTip.Tip="Study flashcards from notes with selected tags"
                                Click="OnStudyAllButtonClick" />
                    </StackPanel>
                </Border>

                <!-- ÐŸÐ°Ð½ÐµÐ»ÑŒ Ñ‚ÐµÐ³Ð¾Ð² -->
                <Border Grid.Row="2" 
                        Margin="5,0,5,10"
                        MinHeight="32">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <!-- Ð§Ð¸Ð¿Ñ‹ Ñ‚ÐµÐ³Ð¾Ð² -->
                        <ItemsControl ItemsSource="{Binding CurrentNoteTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD"
                                            CornerRadius="12"
                                            Padding="10,4,6,4">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#1976D2" />
                                            <Button Content="Ã—"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="2"
                                                    FontSize="14"
                                                    Foreground="#1976D2"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding $parent[Window].((vm:NotesViewModel)DataContext).RemoveTagCommand}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- ÐŸÐ¾Ð»Ðµ Ð²Ð²Ð¾Ð´Ð° Ð½Ð¾Ð²Ð¾Ð³Ð¾ Ñ‚ÐµÐ³Ð° Ñ Ð°Ð²Ñ‚Ð¾ÐºÐ¾Ð¼Ð¿Ð»Ð¸Ñ‚Ð¾Ð¼ -->
                        <AutoCompleteBox x:Name="TagAutoCompleteBox"
                                         Width="150"
                                         Watermark="Add tag..."
                                         FilterMode="ContainsOrdinal"
                                         IsVisible="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                                         ItemsSource="{Binding AllTags}"
                                         ValueMemberBinding="{Binding Name}"
                                         KeyDown="OnTagAutoCompleteKeyDown">
                            <AutoCompleteBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Padding="5,2" />
                                </DataTemplate>
                            </AutoCompleteBox.ItemTemplate>
                        </AutoCompleteBox>
                    </StackPanel>
                </Border>

                <!-- Ð ÐµÐ¶Ð¸Ð¼ Ñ€ÐµÐ´Ð°ÐºÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ (Markdown) -->
                <Grid Grid.Row="3" IsVisible="{Binding IsEditMode}">
                    <TextBox x:Name="NoteContentTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                             Text="{Binding SelectedNote.Content, Mode=TwoWay}"
                             Watermark="Select a note"
                             KeyDown="OnNoteContentKeyDown" />
                    <!-- Canvas Ð´Ð»Ñ Ð¿Ð¾Ð´ÑÐ²ÐµÑ‚ÐºÐ¸ Ð½Ð°Ð¹Ð´ÐµÐ½Ð½Ñ‹Ñ… ÑÐ»Ð¾Ð² -->
                    <Canvas x:Name="SearchHighlightCanvas"
                            IsHitTestVisible="False"
                            ZIndex="1" />
                </Grid>
                
                <!-- Ð ÐµÐ¶Ð¸Ð¼ Ð¿Ñ€ÐµÐ²ÑŒÑŽ (HTML) -->
                <html:HtmlPanel Grid.Row="3"
                                IsVisible="{Binding IsPreviewMode}"
                                Text="{Binding HtmlContent}" 
                                Background="White" />
                
                <!-- ÐŸÐ°Ð½ÐµÐ»ÑŒ Ð¿Ð¾Ð¸ÑÐºÐ° -->
                <Border x:Name="SearchPanel"
                        Grid.Row="4"
                        Background="#F0F0F0"
                        BorderBrush="#CCCCCC"
                        BorderThickness="0,1,0,0"
                        Padding="10,5"
                        IsVisible="False">
                    <Grid ColumnDefinitions="Auto, *, Auto, Auto, Auto, Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Find:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0" />
                        <TextBox x:Name="SearchTextBox"
                                 Grid.Column="1"
                                 Watermark="Enter search text..."
                                 Margin="0,0,10,0"
                                 KeyDown="OnSearchTextBoxKeyDown"
                                 TextChanged="OnSearchTextBoxTextChanged" />
                        <Button x:Name="PreviousButton"
                                Grid.Column="2"
                                Content="â†‘"
                                Width="30"
                                Height="30"
                                Margin="0,0,5,0"
                                ToolTip.Tip="Previous (Shift+F3)"
                                Click="OnPreviousMatchClick" />
                        <Button x:Name="NextButton"
                                Grid.Column="3"
                                Content="â†“"
                                Width="30"
                                Height="30"
                                Margin="0,0,10,0"
                                ToolTip.Tip="Next (F3)"
                                Click="OnNextMatchClick" />
                        <TextBlock x:Name="SearchResultsText"
                                   Grid.Column="4"
                                   Text=""
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   Foreground="#666666" />
                        <Button x:Name="CloseSearchButton"
                                Grid.Column="5"
                                Content="âœ•"
                                Width="30"
                                Height="30"
                                ToolTip.Tip="Close (Esc)"
                                Click="OnCloseSearchClick" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>