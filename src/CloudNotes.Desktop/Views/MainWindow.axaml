<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:CloudNotes.Desktop.Model"               
        xmlns:views="clr-namespace:CloudNotes.Desktop.Views"
        xmlns:vm="clr-namespace:CloudNotes.Desktop.ViewModel"
        xmlns:local="clr-namespace:CloudNotes.Desktop.Converters"
        xmlns:html="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
        x:Class="CloudNotes.Desktop.Views.MainWindow"        
        mc:Ignorable="d"
        Title="CloudNotes"
        Width="1100"
        Height="700">

    <Grid Background="lightblue" ColumnDefinitions="200, *">
        <views:NoteListView x:Name="NoteListViewControl" Grid.Column="0" />

        <Border Padding="5" Grid.Column="1">
            <Grid RowDefinitions="Auto, Auto, Auto, *">
                <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ð·Ð°Ð¼ÐµÑ‚ÐºÐ¸ -->
                <TextBlock Grid.Row="0"
                           Text="{Binding ActiveListItem.Title, FallbackValue='Select a note'}"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="5,5,5,5" />

                <!-- ÐŸÐ°Ð½ÐµÐ»ÑŒ Ð¸Ð½ÑÑ‚Ñ€ÑƒÐ¼ÐµÐ½Ñ‚Ð¾Ð² Ñ„Ð¾Ñ€Ð¼Ð°Ñ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ -->
                <Border Grid.Row="1" 
                        Margin="5,0,5,5"
                        Padding="5"
                        Background="#E8E8E8"
                        CornerRadius="5"
                        IsVisible="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <Button x:Name="BoldButton"
                                Content="B"
                                FontWeight="Bold"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Width="32" Height="32"
                                ToolTip.Tip="Bold (Ctrl+B)"
                                Click="OnBoldButtonClick" />
                        <Button x:Name="ItalicButton"
                                Content="I"
                                FontStyle="Italic"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Width="32" Height="32"
                                ToolTip.Tip="Italic (Ctrl+I)"
                                Click="OnItalicButtonClick" />
                        <Rectangle Width="1" Fill="#AAAAAA" Margin="5,2" />
                        <Button x:Name="SpoilerButton"
                                Content="ðŸ™ˆ"
                                Background="#FFFFFF"
                                Width="32" Height="32"
                                ToolTip.Tip="Spoiler (Ctrl+H) - Hide selected text"
                                Click="OnSpoilerButtonClick" />
                        <Rectangle Width="1" Fill="#AAAAAA" Margin="5,2" />
                        <Button x:Name="PreviewButton"
                                Content="{Binding IsPreviewMode, Converter={x:Static local:PreviewButtonConverter.Instance}}"
                                Foreground="Black"
                                Background="#FFFFFF"
                                Width="60" Height="32"
                                ToolTip.Tip="Toggle Preview (Ctrl+E)"
                                Command="{Binding TogglePreviewModeCommand}" />
                    </StackPanel>
                </Border>

                <!-- ÐŸÐ°Ð½ÐµÐ»ÑŒ Ñ‚ÐµÐ³Ð¾Ð² -->
                <Border Grid.Row="2" 
                        Margin="5,0,5,10"
                        MinHeight="32">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <!-- Ð§Ð¸Ð¿Ñ‹ Ñ‚ÐµÐ³Ð¾Ð² -->
                        <ItemsControl ItemsSource="{Binding CurrentNoteTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD"
                                            CornerRadius="12"
                                            Padding="10,4,6,4">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#1976D2" />
                                            <Button Content="Ã—"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="2"
                                                    FontSize="14"
                                                    Foreground="#1976D2"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding $parent[Window].((vm:NotesViewModel)DataContext).RemoveTagCommand}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- ÐŸÐ¾Ð»Ðµ Ð²Ð²Ð¾Ð´Ð° Ð½Ð¾Ð²Ð¾Ð³Ð¾ Ñ‚ÐµÐ³Ð° Ñ Ð°Ð²Ñ‚Ð¾ÐºÐ¾Ð¼Ð¿Ð»Ð¸Ñ‚Ð¾Ð¼ -->
                        <AutoCompleteBox x:Name="TagAutoCompleteBox"
                                         Width="150"
                                         Watermark="Add tag..."
                                         FilterMode="ContainsOrdinal"
                                         IsVisible="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                                         ItemsSource="{Binding AllTags}"
                                         ValueMemberBinding="{Binding Name}"
                                         KeyDown="OnTagAutoCompleteKeyDown">
                            <AutoCompleteBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Padding="5,2" />
                                </DataTemplate>
                            </AutoCompleteBox.ItemTemplate>
                        </AutoCompleteBox>
                    </StackPanel>
                </Border>

                <!-- Ð ÐµÐ¶Ð¸Ð¼ Ñ€ÐµÐ´Ð°ÐºÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ (Markdown) -->
                <TextBox x:Name="NoteContentTextBox"
                         Grid.Row="3"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         IsVisible="{Binding IsEditMode}"
                         IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                         Text="{Binding SelectedNote.Content, Mode=TwoWay}"
                         Watermark="Select a note"
                         KeyDown="OnNoteContentKeyDown" />
                
                <!-- Ð ÐµÐ¶Ð¸Ð¼ Ð¿Ñ€ÐµÐ²ÑŒÑŽ (HTML) -->
                <html:HtmlPanel Grid.Row="3"
                                IsVisible="{Binding IsPreviewMode}"
                                Text="{Binding HtmlContent}" 
                                Background="White" />
            </Grid>
        </Border>
    </Grid>
</Window>