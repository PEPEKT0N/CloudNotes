<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:CloudNotes.Desktop.Model"               
        xmlns:views="clr-namespace:CloudNotes.Desktop.Views"
        xmlns:html="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
        x:Class="CloudNotes.Desktop.Views.MainWindow"        
        mc:Ignorable="d"
        Title="CloudNotes"
        Width="800"
        Height="450">

    <Grid Background="lightblue" ColumnDefinitions="200, *">
        <views:NoteListView x:Name="NoteListViewControl" Grid.Column="0" />

        <Border Padding="5" Grid.Column="1">
            <Grid>
                <!-- Режим редактирования (Markdown) -->
                <TextBox AcceptsReturn="True"
                         TextWrapping="Wrap"
                         IsVisible="{Binding IsEditMode}"
                         Text="{Binding SelectedNote.Content,
                                        Mode=TwoWay,
                                        FallbackValue='Select a note'}" />
                
                <!-- Режим превью (HTML) -->
                <html:HtmlPanel IsVisible="{Binding IsPreviewMode}"
                                Text="{Binding HtmlContent}" 
                                Background="White" />
            </Grid>
        </Border>
    </Grid>
</Window>