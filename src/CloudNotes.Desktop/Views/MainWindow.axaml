<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudNotes.Desktop.Views"
        xmlns:model="clr-namespace:CloudNotes.Desktop.Model"
        x:Class="CloudNotes.Desktop.Views.MainWindow"
        x:DataType="local:MainWindow" 
        mc:Ignorable="d"
        Title="CloudNotes"
        Width="800"
        Height="450">

    <Grid Background="LightBlue" ColumnDefinitions="200, *">
        <!-- Левая панель: Список заметок -->
        <Border Grid.Column="0" Padding="10">
            <DockPanel>
                <Button DockPanel.Dock="Top" 
                        Margin="0,5" 
                        Command="{Binding CreateNoteCommand}">
                    Create Note
                </Button>

                <TextBlock DockPanel.Dock="Top" 
                           Text="Your Notes" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Margin="0,10,0,5"/>

                <ListBox ItemsSource="{Binding Notes}"
                         SelectedItem="{Binding SelectedListItem, Mode=TwoWay}"
                         BorderBrush="Black" BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="model:NoteListItem">
                            <TextBlock Text="{Binding Title}" 
                                       ToolTip.Tip="{Binding UpdatedAt}"/> 
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Правая панель: Редактор заметки -->
        <Border Grid.Column="1" Padding="10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Bottom" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            Margin="0,5,0,0">
                    <Button Command="{Binding UpdateNoteCommand}" 
                            Margin="0,0,5,0" 
                            IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}">
                        Update
                    </Button>
                    <Button Command="{Binding DeleteNoteCommand}" 
                            IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}">
                        Delete
                    </Button>
                </StackPanel>

                <TextBox Name="NoteEditorTextBox"
                         Text="{Binding SelectedNote.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         IsEnabled="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                         Watermark="Select a note to edit..."/>
            </DockPanel>
        </Border>
    </Grid>
</Window>