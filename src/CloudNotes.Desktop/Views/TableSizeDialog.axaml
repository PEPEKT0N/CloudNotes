<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CloudNotes.Desktop.Views.TableSizeDialog"
        Title="Insert Table"
        Width="300"
        Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, *" Margin="20">
        <TextBlock Grid.Row="0"
                   Text="Select table size:"
                   FontSize="14"
                   Margin="0,0,0,15" />
        
        <Grid Grid.Row="1" ColumnDefinitions="Auto, *, Auto" Margin="0,0,0,10">
            <TextBlock Grid.Column="0"
                       Text="Rows:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0" />
            <NumericUpDown x:Name="RowsUpDown"
                          Grid.Column="1"
                          Minimum="1"
                          Maximum="20"
                          Value="3"
                          HorizontalAlignment="Stretch" />
        </Grid>
        
        <Grid Grid.Row="2" ColumnDefinitions="Auto, *, Auto" Margin="0,0,0,20">
            <TextBlock Grid.Column="0"
                       Text="Columns:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0" />
            <NumericUpDown x:Name="ColumnsUpDown"
                          Grid.Column="1"
                          Minimum="1"
                          Maximum="20"
                          Value="3"
                          HorizontalAlignment="Stretch" />
        </Grid>
        
        <Grid Grid.Row="3" ColumnDefinitions="*, *" ColumnSpacing="10">
            <Button Grid.Column="0"
                    Content="Cancel"
                    Click="OnCancelClick" />
            <Button Grid.Column="1"
                    Content="Insert"
                    Click="OnInsertClick"
                    IsDefault="True" />
        </Grid>
    </Grid>
</Window>
