<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:model="using:CloudNotes.Desktop.Model"
        x:Class="CloudNotes.Desktop.Views.FolderSelectionDialog"
        Width="400"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        Title="Move note to folder">

  <StackPanel Margin="10" Spacing="8">
    <TextBlock Text="Select folder:" />
    <ListBox x:Name="FolderListBox"
             MaxHeight="250"
             MinHeight="200">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Name}" />
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,10,0,0">
      <Button x:Name="OkButton" Content="OK" IsDefault="True" MinWidth="70" />
      <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" MinWidth="70" />
    </StackPanel>
  </StackPanel>
</Window>
