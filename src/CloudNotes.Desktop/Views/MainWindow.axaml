<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CloudNotes.MainWindow"
        Title="CloudNotes">
    

    <Grid Background="lightblue" ColumnDefinitions="200, *">
        <Border Padding="20" Grid.Column="0">
            <Grid RowDefinitions="Auto, Auto, *">
                <StackPanel Grid.Row="0">
                    <TextBox>CloudNotes</TextBox>
                    <Button Margin="0, 5">Create note</Button>

                    <TextBlock Text="Your Notes" FontWeight="Bold"
                    FontSize="14" Margin="0, 30, 0, 10"/>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                    Height="300">
                        <StackPanel Name="NotesListPanel">
                            <Label Content="Meeting notes 2024" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Shopping list" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Project ideas" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Daily tasks" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Book quotes" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Travel plans" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Recipes" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Work notes" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Personal goals" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Learning materials" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Meeting notes 2024" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Shopping list" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Project ideas" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Daily tasks" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Book quotes" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Travel plans" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Recipes" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Work notes" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Personal goals" Margin="0,2" Cursor="Hand"/>
                            <Label Content="Learning materials" Margin="0,2" Cursor="Hand"/>    
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>
        <Border Padding="5" Grid.Column="1">
            <TextBox AcceptsReturn="True" TextWrapping="Wrap"/>
        </Border>
    </Grid>
</Window>
