<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:CloudNotes.Desktop.Model"               
        xmlns:views="clr-namespace:CloudNotes.Desktop.Views"
        xmlns:vm="clr-namespace:CloudNotes.Desktop.ViewModel"
        xmlns:html="clr-namespace:TheArtOfDev.HtmlRenderer.Avalonia;assembly=Avalonia.HtmlRenderer"
        x:Class="CloudNotes.Desktop.Views.MainWindow"        
        mc:Ignorable="d"
        Title="CloudNotes"
        Width="1100"
        Height="700">

    <Grid Background="lightblue" ColumnDefinitions="200, *">
        <views:NoteListView x:Name="NoteListViewControl" Grid.Column="0" />

        <Border Padding="5" Grid.Column="1">
            <Grid RowDefinitions="Auto, Auto, *">
                <!-- Заголовок заметки -->
                <TextBlock Grid.Row="0"
                           Text="{Binding ActiveListItem.Title, FallbackValue='Select a note'}"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="5,5,5,5" />

                <!-- Панель тегов -->
                <Border Grid.Row="1" 
                        Margin="5,0,5,10"
                        MinHeight="32">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <!-- Чипы тегов -->
                        <ItemsControl ItemsSource="{Binding CurrentNoteTags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E3F2FD"
                                            CornerRadius="12"
                                            Padding="10,4,6,4">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <TextBlock Text="{Binding Name}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#1976D2" />
                                            <Button Content="×"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="2"
                                                    FontSize="14"
                                                    Foreground="#1976D2"
                                                    VerticalAlignment="Center"
                                                    Command="{Binding $parent[Window].((vm:NotesViewModel)DataContext).RemoveTagCommand}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Поле ввода нового тега с автокомплитом -->
                        <AutoCompleteBox x:Name="TagAutoCompleteBox"
                                         Width="150"
                                         Watermark="Add tag..."
                                         FilterMode="ContainsOrdinal"
                                         IsVisible="{Binding SelectedNote, Converter={x:Static ObjectConverters.IsNotNull}}"
                                         ItemsSource="{Binding AllTags}"
                                         ValueMemberBinding="{Binding Name}"
                                         KeyDown="OnTagAutoCompleteKeyDown">
                            <AutoCompleteBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Padding="5,2" />
                                </DataTemplate>
                            </AutoCompleteBox.ItemTemplate>
                        </AutoCompleteBox>
                    </StackPanel>
                </Border>

                <!-- Режим редактирования (Markdown) -->
                <TextBox Grid.Row="2"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         IsVisible="{Binding IsEditMode}"
                         Text="{Binding SelectedNote.Content,
                                        Mode=TwoWay,
                                        FallbackValue='Select a note'}" />
                
                <!-- Режим превью (HTML) -->
                <html:HtmlPanel Grid.Row="2"
                                IsVisible="{Binding IsPreviewMode}"
                                Text="{Binding HtmlContent}" 
                                Background="White" />
            </Grid>
        </Border>
    </Grid>
</Window>